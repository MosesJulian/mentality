---
import { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'button'>;

const { class: className, ...props } = Astro.props;
---

<button
  class:list={[
    'py-2 bg-primary rounded-md text-black font-medium border-2 border-primary transition-colors duration-200 hover:border-primary-dark hover:bg-white hover:text-primary-dark',
    className,
  ]}
  {...props}
>
  <slot />
</button>
